/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a user-centric security model for a fitness matching application.
 *
 * Data Structure:
 * - /users/{userId}: Stores public user profile information, accessible only to the owner.
 * - /swipes/{swipeId}: Stores swipe actions, write-only for clients.
 * - /matches/{matchId}: Stores mutual matches, read-only for clients. Server-managed.
 * - /conversations/{matchId}: Stores conversation metadata, readable/writable by participants.
 * - /conversations/{matchId}/messages/{messageId}: Stores messages within a conversation, readable/writable by participants.
 *
 * Key Security Decisions:
 * - User profiles are private and only accessible/modifiable by the owning user.
 * - Swipes are write-only.
 * - Matches are read-only for clients and are intended to be created by a trusted server environment.
 * - Conversations and Messages are accessible only to the participants.
 * - The `users` array of a Match document stores the UIDs of the involved users, and is required for authorization.
 * - The `users` array of a Conversation document stores the UIDs of the involved users, and is required for authorization.
 *
 * Denormalization for Authorization:
 * - Matches and Conversations contain `users` array that lists the UIDs of the involved users. This denormalization enables efficient and secure authorization for read and write operations.
 *
 * Structural Segregation:
 * - Public user profiles are stored directly under `/users/{userId}`, ensuring easy access for display purposes.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (get, list, update, delete) User with matching UID can perform these actions.
     * @allow (create) User can create their own profile.
     * @deny (get, list, update, delete) User cannot access other user profiles.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Listing all users is not permitted.
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.uid == resource.data.uid;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to swipe actions. Swipes are write-only and cannot be read directly.
     * @path /swipes/{swipeId}
     * @allow (create) Any authenticated user can create a swipe action.
     * @deny (get, list, update, delete) No one can read, update, or delete swipe actions.
     * @principle Enforces write-only access for swipe data.
     */
    match /swipes/{swipeId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to match data. Matches are read-only for clients.
     * @path /matches/{matchId}
     * @allow (get, list) Any authenticated user can read match data.
     * @deny (create, update, delete) No one can create, update, or delete match data (server-managed).
     * @principle Enforces read-only access for match data, with server-side management.
     */
    match /matches/{matchId} {
       function isSignedIn() {
        return request.auth != null;
      }
       function isParticipant(users) {
        return request.auth.uid in users;
      }

      allow get: if isSignedIn() && isParticipant(resource.data.users);
      allow list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to conversation metadata. Only participants can read and write.
     * @path /conversations/{matchId}
     * @allow (get, list, update, delete) Participants can perform these actions.
     * @allow (create) Participants can create a conversation.
     * @deny (get, list, update, delete) Non-participants cannot access the conversation.
     * @principle Enforces shared access between participants for conversation metadata.
     */
    match /conversations/{matchId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isParticipant(users) {
        return request.auth.uid in users;
      }
      allow get: if isSignedIn() && isParticipant(resource.data.users);
      allow list: if false; // Listing all conversations is not permitted.
      allow create: if isSignedIn() && isParticipant(request.resource.data.users);
      allow update: if isSignedIn() && isParticipant(resource.data.users);
      allow delete: if false;
    }

    /**
     * @description Controls access to messages within a conversation. Only participants can read and write.
     * @path /conversations/{matchId}/messages/{messageId}
     * @allow (get, list, create, update, delete) Participants can perform these actions.
     * @deny (get, list, create, update, delete) Non-participants cannot access messages.
     * @principle Enforces shared access between participants for messages.
     */
    match /conversations/{matchId}/messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isConversationParticipant(matchId) {
          return get(/databases/$(database)/documents/conversations/$(matchId)).data.users.hasAny([request.auth.uid]);
      }
      allow get: if isSignedIn() && isConversationParticipant(matchId);
      allow list: if isSignedIn() && isConversationParticipant(matchId);
      allow create: if isSignedIn() && isConversationParticipant(matchId) && request.resource.data.senderId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }
  }
}