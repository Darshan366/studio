/**
 * @file Firestore Security Rules for Fitness App Prototype
 *
 * @core_philosophy This ruleset prioritizes user data protection and access control.
 *  - Users can only read and write their own profile data.
 *  - Swipes are write-only by clients.
 *  - Matches are created by the server and read-only for clients.
 *  - Conversations and messages are accessible only to the participants.
 *
 * @data_structure
 * - /users/{userId}: Stores public user profile information.
 * - /swipes/{swipeId}: Stores individual swipe actions.
 * - /matches/{matchId}: Stores mutual match data.
 * - /conversations/{matchId}: Stores conversation metadata.
 * - /conversations/{matchId}/messages/{messageId}: Stores individual messages.
 *
 * @key_security_decisions
 * - Users cannot list all profiles.
 * - Swipes are write-only and cannot be read or listed directly.
 * - Matches are read-only for clients and can only be created by trusted server logic.
 *
 * @denormalization_for_authorization
 *  - Conversation documents store an array of user UIDs (`users` field) to simplify access control for messages.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) User with UID 'user_abc' can create their own profile.
     * @allow (get, update, delete) User with UID 'user_abc' can read, update, and delete their own profile.
     * @deny (create) User with UID 'user_xyz' cannot create a profile for 'user_abc'.
     * @deny (get, update, delete) User with UID 'user_xyz' cannot read, update, or delete profile of 'user_abc'.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isSignedIn()
                   && request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to swipe documents.  Swipes are write-only.
     * @path /swipes/{swipeId}
     * @allow (create) Any authenticated user can create a swipe document.
     * @deny (get, list, update, delete) No user can read, list, update, or delete swipe documents.
     * @principle Swipes are write-only, preventing data leakage and modification.
     */
    match /swipes/{swipeId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if false;
      allow list: if false;

      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to match documents. Matches are read-only and created by a trusted server.
     * @path /matches/{matchId}
     * @allow (get, list) Any authenticated user can read and list match documents.
     * @deny (create, update, delete) No user can create, update, or delete match documents.
     * @principle Matches are server-managed and read-only for clients.
     */
    match /matches/{matchId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn();
      allow list: if false;

      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to conversation documents. Only participants can read and write.
     * @path /conversations/{matchId}
     * @allow (get, list, create, update) Users in the 'users' array can read, list, create, and update the conversation.
     * @deny (get, list, create, update) Users not in the 'users' array cannot read, list, create, or update the conversation.
     * @principle Ensures only matched users can access their conversations.
     */
    match /conversations/{matchId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isParticipant() {
        return isSignedIn() && request.auth.uid in resource.data.users;
      }

      function isValidParticipant() {
        return isSignedIn() && request.auth.uid in request.resource.data.users;
      }

      allow get: if isParticipant();
      allow list: if false;

      allow create: if isSignedIn() && isValidParticipant();
      allow update: if isParticipant();
      allow delete: if false;
    }

    /**
     * @description Controls access to message documents within a conversation. Only participants can read and write.
     * @path /conversations/{matchId}/messages/{messageId}
     * @allow (get, list, create) Users in the parent conversation's 'users' array can read, list, and create messages.
     * @deny (update, delete) No user can update or delete messages.
     * @principle Ensures only matched users can access and create messages in their conversations.
     */
    match /conversations/{matchId}/messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isParticipant(matchId) {
        return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(matchId)).data.users;
      }

      allow get: if isParticipant(matchId);
      allow list: if isParticipant(matchId);

      allow create: if isParticipant(matchId);
      allow update: if false;
      allow delete: if false;
    }
  }
}