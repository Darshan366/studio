/**
 * @fileoverview Firestore Security Rules for the FitConnect application.
 *
 * Core Philosophy:
 * This ruleset prioritizes user data protection and prevents unauthorized access
 * or modification. It implements a role-based access control system where users
 * can only access their own data unless explicitly granted other permissions.
 *
 * Data Structure:
 * - /users/{userId}: Stores public user profile information. Accessible only
 *   by the user with the matching userId.
 * - /swipes/{swipeId}: Stores swipe actions. Write-only for clients.
 * - /matches/{matchId}: Stores mutual matches. Read-only, created by server.
 * - /conversations/{matchId}: Stores conversation metadata. Accessible only
 *   by the participants.
 * - /conversations/{matchId}/messages/{messageId}: Stores messages within a
 *   conversation. Accessible only by the participants.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profile data.
 * - Swipes are write-only, preventing users from reading swipe data.
 * - Matches are read-only and created by a trusted server environment.
 * - Conversations and messages are only accessible to the users involved in the
 *   conversation.
 *
 * Denormalization for Authorization:
 * The 'users' array is denormalized in the /matches and /conversations
 * collections to efficiently determine if the requesting user is a participant
 * in the match or conversation. This avoids costly and complex queries.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) - User can create their own profile.
     * @allow (get, update, delete) - User can only access their own profile.
     * @deny (create) - If the user ID does not match the authenticated user ID.
     * @deny (get, update, delete) - If the user ID does not match the authenticated user ID.
     * @principle Enforces document ownership and validates relational integrity.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.uid == request.auth.uid;
      allow update: if isOwner(userId) && resource.data.uid == request.auth.uid;
      allow delete: if isOwner(userId) && resource.data.uid == request.auth.uid;
    }

    /**
     * @description Controls access to swipe documents.
     * @path /swipes/{swipeId}
     * @allow (create) - Users can create swipes.
     * @deny (get, list, update, delete) - Clients cannot read, update or delete swipe data.
     * @principle Restricts client access to sensitive swipe data.
     */
    match /swipes/{swipeId} {
      allow get: if false;
      allow list: if false;
      allow create: if request.auth != null;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to match documents.
     * @path /matches/{matchId}
     * @allow (get, list) -  Anyone can view matches.
     * @deny (create, update, delete) -  Clients cannot create, update, or delete matches.
     * @principle Restricts match creation and modification to the server.
     */
    match /matches/{matchId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to conversation documents.
     * @path /conversations/{matchId}
     * @allow (get, list, create, update) - Participants can access the conversation.
     * @deny (delete) - Clients cannot delete conversations.
     * @principle Enforces shared access between conversation participants.
     */
    match /conversations/{matchId} {
      function isParticipant() {
        return request.auth != null && request.resource.data.users.hasAny([request.auth.uid]);
      }
      allow get: if isParticipant();
      allow list: if false;
      allow create: if request.auth != null && request.resource.data.users.hasAny([request.auth.uid]);
      allow update: if isParticipant();
      allow delete: if false;
    }

    /**
     * @description Controls access to messages within a conversation.
     * @path /conversations/{matchId}/messages/{messageId}
     * @allow (get, list, create) - Participants can read messages.
     * @deny (update, delete) - Clients cannot update or delete messages.
     * @principle Enforces shared access between conversation participants for messages.
     */
    match /conversations/{matchId}/messages/{messageId} {
        function isParticipant() {
          return request.auth != null && get(/databases/$(database)/documents/conversations/$(matchId)).data.users.hasAny([request.auth.uid]);
        }
        allow get: if isParticipant();
        allow list: if isParticipant();
        allow create: if isParticipant();
        allow update: if false;
        allow delete: if false;
    }
  }
}