
rules_version = '2';

// This file is no longer used for image uploads as the application
// has been migrated to use Cloudinary for image hosting.
// The rules are kept for reference but are not active for profile pictures.

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user avatars (DEPRECATED - Using Cloudinary)
    match /avatars/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback rule for any other paths - deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

    