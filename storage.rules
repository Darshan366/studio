
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user avatars
    match /avatars/{userId} {
      // Allow read access to anyone (for viewing profile pictures)
      allow read: if true;
      // Allow write access only to the authenticated user who owns the avatar
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback rule for any other paths - deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
